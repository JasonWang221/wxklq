/* pages/upload/upload.wxss */
/*画廊*/
.gallery {
    /*margin-bottom: 100rpx;*/
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    margin-top:20rpx;
}

/*每张图片所占容器*/
.item {
    position: relative;
    margin: 5px;
}

/*删除按钮*/
.delete {
    position: absolute;
    height: 20px;
    bottom: 0;
    width: 100%;
    background: #ccc;
    opacity: .8;
}

.delete image {
    position: absolute;
    width: 20px;
    height: 20px;
}
.submitBtn{
  font-size:34rpx;
  padding:15rpx 0;
  margin:0 10rpx;
  line-height: 50rpx;
  background-color: red;
}
.section{
  display: flex;
  flex-direction: row;
  font-size:32rpx;
  margin: 20rpx 10rpx;
  justify-content: space-around;
}
.section input{
  border:1px solid #ccc;
  width:75%;
  padding:0 5rpx;
  height: 50rpx;
  margin-top:15rpx; 
}
.section textarea{
  margin-top:15rpx;
  border:1px solid #ccc;
  width:75%;
  padding:0 5rpx;
  min-height: 300rpx;
}
.section label{
  width:25%;
  line-height: 32rpx;
  padding-top:10rpx;
  margin-top:20rpx;
}
.intro{
  line-height:32rpx;
  font-size:32rpx;
  margin-left:10rpx;
}